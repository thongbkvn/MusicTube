<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin_bottom"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/playlist_thumbnail"
            android:layout_width="@dimen/low_video_width"
            android:layout_height="@dimen/low_video_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/card_view_margin_right"
            android:contentDescription="Playlist Thumbnail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_playlist_height"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/playlist_thumbnail">

            <TextView
                android:id="@+id/playlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@android:style/TextAppearance.Material.SearchResult.Title"/>

            <TextView
                android:id="@+id/playlist_chanel_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@android:style/TextAppearance.Material.SearchResult.Subtitle" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>